#cloud-config
users:
  - name: bingo
    system: true

write_files:
  - encoding: b64
    content: ${b64_bingo_config}
    owner: root:root
    path: /opt/bingo/config.yaml
    permissions: '0644'
  - encoding: b64
    content: ${b64_bingo_logrotate_config}
    owner: root:root
    path: /etc/logrotate.d/bingo
    permissions: '0644'

runcmd:
  - [mkdir, -p, /var/log/bingo]
  - [chown, 65532:65532, /var/log/bingo]
  - [chmod, '0755', /var/log/bingo]