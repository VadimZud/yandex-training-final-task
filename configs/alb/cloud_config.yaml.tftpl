#cloud-config
write_files:
  - encoding: b64
    content: ${b64_haproxy_config}
    owner: root:root
    path: /etc/haproxy/haproxy.cfg
    permissions: '0644'
  - encoding: b64
    content: ${b64_unified_agent_config}
    owner: root:root
    path: /etc/yandex/unified_agent.yml
    permissions: '0644'
  - encoding: b64
    content: ${b64_cert_pem}
    path: /etc/haproxy/cert.pem
    permissions: '0600'

runcmd:
  - [chown, '99:99', /etc/haproxy/cert.pem]